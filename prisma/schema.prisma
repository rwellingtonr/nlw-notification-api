// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider = "prisma-erd-generator"
}

model Notification {
  id          String    @id
  content     String
  category    String
  recipientId String
  createdAt   DateTime  @default(now())
  readAt      DateTime?

  @@index([recipientId])
}
